<?xml version="1.0" encoding="utf-8"?>

<Patch>

    <!-- 暮澜 全是布 -->

    <Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="TAWM_Axolotl_MuLan"]/statBases/ArmorRating_Sharp</xpath>
		<value>
			<ArmorRating_Sharp>6</ArmorRating_Sharp>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="TAWM_Axolotl_MuLan"]/statBases/ArmorRating_Blunt</xpath>
		<value>
			<ArmorRating_Blunt>34</ArmorRating_Blunt>
		</value>
	</Operation>

    <Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[defName="TAWM_Axolotl_MuLan"]/equippedStatOffsets</xpath>
		<value>
			<CarryBulk>20</CarryBulk>
		</value>
	</Operation>

    <!-- 清风灵衣 都是布 -->

    <Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="TAWM_Axolotl_QingFeng"]/statBases/ArmorRating_Sharp</xpath>
		<value>
			<ArmorRating_Sharp>14</ArmorRating_Sharp>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="TAWM_Axolotl_QingFeng"]/statBases/ArmorRating_Blunt</xpath>
		<value>
			<ArmorRating_Blunt>62</ArmorRating_Blunt>
		</value>
	</Operation>

    <Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[defName="TAWM_Axolotl_QingFeng"]/equippedStatOffsets</xpath>
		<value>
			<CarryBulk>40</CarryBulk>
		</value>
	</Operation>

    <!-- 发夹 还是布-->
    <Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="TAWM_Axolotl_LingXing"]/statBases/ArmorRating_Sharp</xpath>
		<value>
			<ArmorRating_Sharp>0.2</ArmorRating_Sharp>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="TAWM_Axolotl_LingXing"]/statBases/ArmorRating_Blunt</xpath>
		<value>
			<ArmorRating_Blunt>1.125</ArmorRating_Blunt>
		</value>
	</Operation>

    <!-- 给点buff作为失去护甲的补偿罢-->
    <Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[defName="TAWM_Axolotl_LingXing"]/equippedStatOffsets</xpath>
		<value>
			<ReloadSpeed>0.25</ReloadSpeed>
            <SmokeSensitivity>-0.35</SmokeSensitivity>
            <ArmorRating_Electric>0.35</ArmorRating_Electric>
            <ShootingAccuracyPawn>0.25</ShootingAccuracyPawn>
			<ToxicEnvironmentResistance>0.35</ToxicEnvironmentResistance>
            <IncomingDamageFactor>-0.2</IncomingDamageFactor>
		</value>
	</Operation>

</Patch>