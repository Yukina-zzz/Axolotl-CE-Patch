<?xml version="1.0" encoding="utf-8"?>
<Defs>

	<!-- ==================== AmmoSet ========================== -->

	<CombatExtended.AmmoSetDef>
		<defName>MoeLotl_CE_Crossbow_Adv</defName>
		<label>crossbow bolts</label>
		<ammoTypes>
			<Ammo_CrossbowBolt_Stone>MoeLotl_CE_CrossbowBoltAdv_Stone</Ammo_CrossbowBolt_Stone>
			<Ammo_CrossbowBolt_Steel>MoeLotl_CE_CrossbowBoltAdv_Steel</Ammo_CrossbowBolt_Steel>
			<Ammo_CrossbowBolt_Plasteel>MoeLotl_CE_CrossbowBoltAdv_Plasteel</Ammo_CrossbowBolt_Plasteel>
			<Ammo_CrossbowBolt_Venom>MoeLotl_CE_CrossbowBoltAdv_Venom</Ammo_CrossbowBolt_Venom>
			<Ammo_CrossbowBolt_Flame>MoeLotl_CE_CrossbowBoltAdv_Flame</Ammo_CrossbowBolt_Flame>
		</ammoTypes>
	</CombatExtended.AmmoSetDef>

	<!-- ================== Projectiles ================== -->

	<!-- The amount of arrows usable over the ammo lifetime for each resource cost is equal to
		[r / (1 - x)];
			x = preExplosionSpawnChance,
			r = resource cost. -->

	<ThingDef ParentName="BaseCrossbowBoltProjectile" Name="BaseMoeLotlCrossbowBoltAdv" Abstract="true">
		<projectile Class="CombatExtended.ProjectilePropertiesCE">
			<speed>60</speed>
		</projectile>
	</ThingDef>


	<ThingDef ParentName="BaseMoeLotlCrossbowBoltAdv">
		<defName>MoeLotl_CE_CrossbowBoltAdv_Stone</defName>
		<label>crossbow bolt (stone)</label>
		<graphicData>
			<texPath>Things/Projectile/Arrows/Arrow_Stone</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<projectile Class="CombatExtended.ProjectilePropertiesCE">
			<damageAmountBase>14</damageAmountBase>
			<armorPenetrationBlunt>6</armorPenetrationBlunt>
			<armorPenetrationSharp>4</armorPenetrationSharp>
			<preExplosionSpawnChance>0.1</preExplosionSpawnChance>
			<!-- 11.11 bolts per resource -->
			<preExplosionSpawnThingDef>Ammo_CrossbowBolt_Stone</preExplosionSpawnThingDef>
		</projectile>
		<modExtensions>
			<li Class="AxolotlCE.ModExt_QiProjectile">
				<projectile>MoeLotl_CE_CrossbowBoltAdv_StoneQ</projectile>
			</li>
		</modExtensions>
	</ThingDef>

