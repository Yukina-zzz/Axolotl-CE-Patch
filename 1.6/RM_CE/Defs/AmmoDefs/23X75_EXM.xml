<?xml version="1.0" encoding="utf-8"?>

<Defs>

    <!-- 23x75 buck 退魔-->
    <ThingDef Class="CombatExtended.AmmoDef" ParentName="23x75mmRBase">
		<defName>Ammo_23x75mmR_Buck_EXM</defName>
		<label>23x75mmR shell (Buck_EXM)</label>
		<graphicData>
			<texPath>Things/Ammo/Shotgun/Shot</texPath>
			<graphicClass>Graphic_StackCount</graphicClass>
		</graphicData>
		<ammoClass>Exorcism</ammoClass>
		<cookOffProjectile>Bullet_23x75mmR_Buck_EXM</cookOffProjectile>
	</ThingDef>

    <ThingDef ParentName="Base23x75mmRBullet">
