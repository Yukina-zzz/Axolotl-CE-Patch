	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="RM_IncantationCrossbow"]/tools</xpath>
		<value>
			<tools>
				<li Class="CombatExtended.ToolCE">
					<capacities>
						<li>Blunt</li>
					</capacities>
					<power>10</power>
					<cooldownTime>2</cooldownTime>
					<armorPenetrationBlunt>5</armorPenetrationBlunt>
				</li>
			</tools>
		</value>
	</Operation>

</Patch>